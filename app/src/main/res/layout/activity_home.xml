<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1611821.doctor_appointment_booking.HomeActivity"

    android:orientation="vertical"
    android:gravity="center_vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:padding="7dp"
                android:orientation="vertical"
                android:onClick="startProfile">

                <ImageView
                    android:padding="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cycle"
                    android:src="@drawable/profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:padding="7dp"
                android:orientation="vertical"
                android:onClick="startCalendar">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/cale"
                android:background="@drawable/cycle"
                android:layout_gravity="center"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOKINGS"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:padding="7dp"
                android:orientation="vertical"
                android:onClick="startPrescriptions">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cycle"
                    android:src="@drawable/prescr"
                    android:padding="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRESCRIPTIONS"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:padding="7dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="8dp"
                    android:src="@drawable/chat"
                    android:background="@drawable/cycle"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOTIFICATIONS"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:padding="7dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cycle"
                    android:src="@drawable/test"
                    android:padding="9dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TESTIMONIALS"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.5"
            android:paddingLeft="0dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="7dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:src="@drawable/contact"
                    android:background="@drawable/cycle"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT US"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
