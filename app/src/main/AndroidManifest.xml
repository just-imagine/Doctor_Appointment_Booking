                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity2"
            android:label="CREATE ACCOUNT"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="HOME"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".ProfileActivity"
            android:label="MY PROFILE"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".CalendarActivity"
            android:label="CALENDAR"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".PrescriptionActivity"
            android:label="REQUEST PRESCRIPTION"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ChatActivity"
            android:label="CHAT FORUM"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".Viewings"
            android:label="Bookings"
            android:parentActivityName=".HomeActivity"></activity>
